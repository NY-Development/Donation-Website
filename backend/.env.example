# ===============================
# SERVER
# ===============================
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# ===============================
# DATABASE (MongoDB)
# ===============================
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/donation_platform?retryWrites=true&w=majority

# ===============================
# AUTHENTICATION (JWT)
# ===============================
JWT_SECRET=super_secure_jwt_secret_here
JWT_EXPIRES_IN=15m

# Optional (if using refresh tokens)
JWT_REFRESH_SECRET=super_secure_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# ===============================
# PASSWORD & SECURITY
# ===============================
BCRYPT_SALT_ROUNDS=12
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true

# ===============================
# CORS
# ===============================
CORS_ORIGIN=http://localhost:5173
CORS_METHODS=GET,POST,PUT,PATCH,DELETE

# ===============================
# RATE LIMITING
# ===============================
RATE_LIMIT_PUBLIC_WINDOW_MS=60000
RATE_LIMIT_PUBLIC_MAX=120
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=30
RATE_LIMIT_ADMIN_WINDOW_MS=60000
RATE_LIMIT_ADMIN_MAX=60

# ===============================
# CLOUDINARY (Media Uploads)
# ===============================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===============================
# PAYMENT PROVIDER
# ===============================
PAYMENT_PROVIDER=stripe

# ---- Stripe ----
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# ---- Chapa (Alternative) ----
CHAPA_SECRET_KEY=chapa_test_xxxxxxxxxxxxx

# ===============================
# PLATFORM SETTINGS
# ===============================
PLATFORM_FEE_PERCENT=5
MIN_DONATION_AMOUNT=10
MAX_DONATION_AMOUNT=100000

# ===============================
# ADMIN
# ===============================
ADMIN_EMAIL=admin@donationplatform.com

# ===============================
# LOGGING
# ===============================
LOG_LEVEL=debug

# ===============================
# FRONTEND URL
# ===============================
FRONTEND_URL=http://localhost:5173

# ===============================
# REDIS (Optional)
# ===============================
REDIS_URL=


